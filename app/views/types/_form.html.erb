<div class="d-flex justify-content-center" style="min-height: 100vh;">
  <div class="col-md-6 mx-auto">
    <%= form_with(model: type) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :popularity %>
        <%= form.number_field :popularity, class: "form-control" %>
      </div>
      
      <%= form.file_field :image %>

      <div class="form-group">
        <%= form.submit class: "btn btn-primary", style: "margin-top: 10px;" %>
        <%= link_to "Back to types", types_path, class: "btn btn-danger", style: "margin-top: 10px; margin-left: 10px;" %>
      </div>


    <% end %>
  </div>
</div>
