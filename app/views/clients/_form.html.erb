<div class="d-flex justify-content-center" style="min-height: 100vh;">
  <div class="col-md-6 mx-auto">
    <%= form_with(model: @client, url: @client.new_record? ? clients_path : client_path(@client), method: @client.new_record? ? :post : :patch) do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", readonly: !@client.new_record?, type: "email" %>
      </div>

      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control", required: @client.new_record? %>
      </div>

      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control", required: @client.new_record? %>
      </div>

      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, class: "form-control", required: @client.new_record? %>
      </div>

      <div class="form-group">
        <%= form.label :avatar, "Avatar" %>
        <%= form.file_field :avatar, class: "form-control", required: @client.new_record? %>
      </div>
      <% unless form.object.new_record?  %>
      <div class="form-group">
        <%= form.submit "Change Information", class: "btn btn-primary", style: "margin-top: 10px;" %>
      </div>
      <% end %>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", required: @client.new_record? %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, class: "form-control", required: @client.new_record? %>
      </div>
      <% unless form.object.new_record?  %>
      <div class="form-group">
        <%= form.submit "Change Password", :name => 'change_client_password', class: "btn btn-primary", style: "margin-top: 10px;" %>
        <%= link_to "Back to clients", clients_path, class: "btn btn-danger", style: "margin-top: 10px; margin-left: 10px;" %>
      </div>
      <% else %>
      <div class="form-group">
        <%= form.submit "Create", class: "btn btn-primary", style: "margin-top: 10px;" %>
        <%= link_to "Back to clients", clients_path, class: "btn btn-danger", style: "margin-top: 10px; margin-left: 10px;" %>
      </div>
      <% end %>


    <% end %>
  </div>
</div>



<style>
  .gender-radio {
    display: inline-block; 
    margin-right: 10px;  
  }
</style>


