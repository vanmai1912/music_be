
<div class="d-flex justify-content-center" style="min-height: 100vh;">
  <div class="col-md-6 mx-auto">
    <%= form_with(model: singer) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <%= form.file_field :avatar %>

     
      <div class="form-group">
        <label for="gender">Giới tính:</label><br>
        <%= form.radio_button :genre, :nam %>
        <%= form.label :nam, 'Nam' %>
        <%= form.radio_button :genre, :nu %>
        <%= form.label :nu, 'Nữ' %>
      </div>


     <div class="form-group">
        <%= form.submit class: "btn btn-primary", style: "margin-top: 10px;" %>
        <%= link_to "Back to singers", singers_path, class: "btn btn-danger", style: "margin-top: 10px; margin-left: 10px;" %>
      </div>
    <% end %>
  </div>
</div>


<style>
  .gender-radio {
    display: inline-block; 
    margin-right: 10px;  
  }
</style>


