
<div class="d-flex justify-content-center" style="min-height: 100vh;">
  <div class="col-md-6 mx-auto">
    <%= form_with(model: song) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :lyrics %>
        <%= form.text_field :lyrics, class: "form-control" %>
      </div>

      <%= form.file_field :audio, accept: '.mp3, .wav' %>

      <div class="form-group">
        <%= form.label :type_id, "Thể loại" %>
        <%= form.collection_select :type_id, Type.all, :id, :name, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :singer_id, "Ca sĩ thực hiện" %>
        <%= form.collection_select :singer_id, Singer.all, :id, :name, {}, class: "form-control" %>
      </div>



      <div class="form-group">
        <%= form.submit class: "btn btn-primary", style: "margin-top: 10px;" %>
        <%= link_to "Back to songs", songs_path, class: "btn btn-danger", style: "margin-top: 10px; margin-left: 10px;" %>
      </div>


    <% end %>
  </div>
</div>

